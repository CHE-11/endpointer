// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
    {
      "label": "Install Deps",
      "type": "shell",
      "command": "npm install",
      "options": {
        "cwd": "${workspaceFolder}",
        "statusbar": {
          "hide": false,
          "color": "#b7a200"
        }
      },
      "problemMatcher": [],
      "presentation": {
        "panel": "dedicated",
        "reveal": "always"
      },
    },
		{
      "label": "Watch",
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
      "options": {
        "cwd": "${workspaceFolder}",
        "statusbar": {
          "hide": false,
          "color": "#06b724"
        }
      },
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},

    {
      "label": "Build",
			"type": "npm",
			"script": "compile",
			"problemMatcher": [],
			"presentation": {
				"reveal": "always"
			},
      "options": {
        "cwd": "${workspaceFolder}",
        "statusbar": {
          "hide": false,
          "color": "#1674e6"
        }
      },
		},

		{
			"label": "Package VSIX",
			"type": "npm",
			"script": "package",
			"problemMatcher": [],
			"presentation": {
				"reveal": "always"
			},
			"options": {
				"cwd": "${workspaceFolder}",
				"statusbar": {
					"hide": false,
					"color": "#a020f0"
				}
			}
		},
	]
}
